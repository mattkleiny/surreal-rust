{
  "name": "Rust",
  "build": {
    "dockerfile": "Dockerfile",
    "args": {
      "VARIANT": "buster"
    }
  },
  "extensions": [
    "matklad.rust-analyzer",
    "vadimcn.vscode-lldb"
  ],
  "runArgs": [
    "--cap-add=SYS_PTRACE",
    "--security-opt",
    "seccomp=unconfined"
  ],
  "settings": {
    "lldb.executable": "/usr/bin/lldb",
    "files.watcherExclude": {
      "**/target/**": true
    }
  },
  "remoteUser": "vscode"
}